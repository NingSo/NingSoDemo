<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="528dp"
    android:background="@mipmap/game_bg"
    tools:context="com.ningso.ningsodemo.TestActivity">

    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/progross_bg_img">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_center_line"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/peogress_layout"
                android:src="@mipmap/close"/>

            <LinearLayout
                android:id="@+id/peogress_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/layout_center_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:layout_below="@+id/time_layout"
        android:layout_centerInParent="true"/>
</RelativeLayout>
